---
import {
  getLangFromUrl,
  products as productsData,
  useTranslations,
} from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const products = productsData[lang];
---

<section
  id="products"
  class="relative overflow-hidden bg-gradient-radial from-[#FDF3E6] via-[#FDF3E6]/50 to-white"
>
  <div class="container mx-auto px-6 py-20 md:py-28 flex flex-col gap-14">
    <div class="max-w-3xl">
      <p class="text-primary font-semibold uppercase tracking-[0.5em] mb-4">
        {t('products.subtitle')}
      </p>
      <h3
        class="text-4xl sm:text-5xl text-secondary font-semibold leading-tight"
      >
        {t('products.title')}
      </h3>
      <p class="mt-6 text-lg text-secondary/80">{t('products.description')}</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-8">
      {products.map((product) => (
        <article class="bg-white rounded-3xl p-6 flex flex-col gap-4 shadow-[0_25px_70px_-35px_rgba(15,32,39,0.45)] border border-black/5">
          <div class="h-48 w-full rounded-2xl bg-[#F6F1ED] flex items-center justify-center overflow-hidden">
            <img src={product.img} alt={product.title} class="h-full w-full object-contain" loading="lazy" />
          </div>
          <div class="space-y-3 flex-1">
            <h4 class="text-xl font-semibold text-secondary">
              {product.title}
            </h4>
            <p class="text-secondary/80 text-sm leading-relaxed">
              {product.description}
            </p>
            <p class="text-primary font-semibold text-sm">
              {product.benefits}
            </p>
          </div>
          <a
            href={`?producto=${encodeURIComponent(product.title)}#contact`}
            class="inline-flex items-center justify-center gap-2 rounded-xl bg-primary text-white font-semibold py-3 px-4 hover:bg-orange-600 transition-colors"
            aria-label={`Contact sales about ${product.title}`}
          >
            {t('products.cta')}
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5-5 5M6 12h12" />
            </svg>
          </a>
        </article>
      ))}
    </div>
  </div>
</section>
