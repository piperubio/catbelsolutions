---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const navItems = [
  { text: t("nav.home"), link: "#home" },
  { text: t("nav.products"), link: "#products" },
  { text: t("nav.industries"), link: "#industries" },
  { text: t("nav.about"), link: "#about" },
  { text: t("nav.contact"), link: "#contact" },
];
---

<footer class="bg-primary text-[#f4f4f4] flex flex-col">
  <div class="container mx-auto py-8 px-4 flex flex-col md:flex-row">
    <div class="w-full md:w-1/2 mb-6 md:mb-0">
      <a href={lang === 'es' ? '/es' : '/'}>
        <img
          src="/img/logo-footer.webp"
          alt="Catbel Solutions Logo Footer"
          class="w-[250px]"
        >
      </a>
    </div>
    <div class="w-full md:w-1/2">
      <div class="mb-4">
        <h3 class="text-[#f4f4f4] font-bold text-xl mb-2">
          {t('footer.navigation')}
        </h3>
        <nav class="flex flex-col space-y-2">
          {navItems.map((item) => (
            <a href={item.link} class="text-[#f4f4f4] font-bold hover:underline">
              {item.text}
            </a>
          ))}
        </nav>
      </div>
      <div class="flex flex-col space-y-2">
        <a
          href="mailto:sales@catbel.solutions"
          class="flex items-center text-[#f4f4f4] font-bold text-lg hover:underline"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 mr-2"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            />
          </svg>
          sales@catbel.solutions
        </a>
        <a
          href="https://wa.me/61404241062?text=Hello,%20I%20want%20more%20information%20about%20your%20products"
          class="flex items-center text-[#f4f4f4] font-bold text-lg hover:underline"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 mr-2"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
            />
          </svg>
          +61 404241062
        </a>
      </div>
    </div>
  </div>
  <div class="bg-[#c67617] py-2 px-4 flex justify-between items-center text-sm">
    <span>{t('footer.rights')}</span>
    <span class="flex items-center">
      {t('footer.maintainer')}
      <a href="https://vboost.cl/" class="ml-1 font-bold hover:underline"
        >vBoost.cl</a
      >
    </span>
  </div>
</footer>
